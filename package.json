{
  "name": "LilyWallet",
  "author": "Kevin Mulcrone <kaybesee@gmail.com> (https://kevinmulcrone.com)",
  "description": "Lily is the easiest way to securely store and manage your Bitcoin",
  "license": "MIT",
  "version": "1.0.4",
  "private": true,
  "main": "./src/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "start": "PORT=3001 react-scripts start",
    "electron-testnet": "TESTNET=true electron .",
    "build": "react-scripts build",
    "test": "react-scripts test --testPathIgnorePatterns=src/__tests__/fixtures",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Lily Wallet",
    "appId": "com.lily-wallet",
    "extends": null,
    "mac": {
      "category": "public.app-category.finance",
      "icon": "./src/assets/AppIcon.icns",
      "target": [
        "dmg"
      ],
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Allow your camera to scan QR codes during account setup and transaction signing."
      },
      "files": [
        "./build/**/*",
        "./src/main.js",
        "./src/preload.js",
        "./src/server/**/*",
        "./src/utils/**/*",
        "./src/types/*",
        "./HWIs/HWI_MAC"
      ]
    },
    "linux": {
      "category": "Finance",
      "packageCategory": "wallet",
      "icon": "./src/assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        }
      ],
      "files": [
        "./build/**/*",
        "./src/main.js",
        "./src/preload.js",
        "./src/server/**/*",
        "./src/utils/**/*",
        "./src/types/*",
        "./HWIs/HWI_LINUX"
      ]
    },
    "win": {
      "files": [
        "./build/**/*",
        "./src/main.js",
        "./src/preload.js",
        "./src/server/**/*",
        "./src/utils/**/*",
        "./src/types/*",
        "./HWIs/hwi.exe"
      ]
    }
  },
  "dependencies": {
    "@cvbb/qr-protocol": "^2.0.4",
    "@cvbb/sdk": "^0.1.8",
    "axios": "^0.21.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bignumber.js": "^9.0.0",
    "bip39": "^3.0.2",
    "bitcoin-simple-rpc": "^0.0.3",
    "bitcoinjs-lib": "^5.1.10",
    "bitcoinjs-message": "^2.1.4",
    "bs58check": "^2.1.2",
    "coinselect": "^3.1.12",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "moment": "^2.29.1",
    "polished": "^3.5.1",
    "react": "^16.13.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.13.1",
    "react-modal": "^3.11.2",
    "react-qr-svg": "^2.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-spring": "^8.0.27",
    "react-webcam-barcode-scanner": "0.0.2-rc2",
    "recharts": "^1.8.5",
    "socks-proxy-agent": "^5.0.0",
    "styled-components": "^5.1.0",
    "styled-icons": "^10.19.0",
    "unchained-bitcoin": "0.0.9",
    "uuid": "^8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/react": "^5.4.2",
    "@cypress/webpack-dev-server": "^1.1.6",
    "@types/crypto-js": "^4.0.1",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "@types/react-copy-to-clipboard": "^4.3.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-modal": "^3.10.6",
    "@types/react-router-dom": "^5.1.6",
    "@types/recharts": "^1.8.16",
    "@types/rewire": "^2.5.28",
    "@types/styled-components": "^5.1.4",
    "@types/uuid": "^8.3.0",
    "cypress": "^7.2.0",
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-mock-ipc": "^0.3.8",
    "electron-packager": "^14.2.1",
    "electron-winstaller": "^4.0.0",
    "jest-when": "^3.0.0",
    "mocha": "^8.1.3",
    "react-app-rewired": "^2.1.6",
    "rewire": "^5.0.0",
    "source-map-loader": "^1.1.1",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^electron$": "<rootDir>/src/__tests__/mock/electron-mock.ts"
    }
  }
}
